grammar edu.eci.prot.dsl2.Dsl2 with org.eclipse.xtext.common.Terminals

generate dsl2 "http://www.eci.edu/prot/dsl2/Dsl2"


Domainmodel:
    (elements+=PackageDeclaration)*;
 
PackageDeclaration:
    'package' name=QualifiedName '{'
        (elements+=Entity)*
    '}';
 
AbstractElement:
    PackageDeclaration | Type;
 
QualifiedName:
    ID ('.' ID)*;
 
Import:
    'import' importedNamespace=QualifiedNameWithWildcard;
  
QualifiedNameWithWildcard:
    QualifiedName '.*'?;
  
Type:
    DataType | Entity;
  
DataType:
    name=[PRIMITIVE_TYPE|QualifiedName];
    
PRIMITIVE_TYPE: name='Integer'|'String'|'Boolean'|'Byte'|'Character'|'Double'|'Float'|'Long'|'Short'|'Number';
 
Entity:
    'entity' name=ID ('extends' superType=[Entity|QualifiedName])? '{'
    	(principal?='principal')?
    	(imports+=Import)*
        (features+=Feature)*
    '}';
 
Feature:
     name=ID ':' (many?='many')? (transient?='transient')? type=Type;